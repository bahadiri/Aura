{
    "compilerOptions": {
        "outDir": "dist",
        "declaration": true,
        "declarationMap": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "target": "ES2020",
        "jsx": "react-jsx",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "src/**/tests/**",
        "src/**/*.test.*",
        "src/**/*.spec.*",
        "node_modules",
        "dist"
    ]
}